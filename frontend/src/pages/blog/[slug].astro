---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Icon from "../../components/Icon";

const { slug } = Astro.params;
---

<BaseLayout title="Guide moved" description="Guides now live under /guides." bodyClass="bg-background-light text-text-light font-display">
  <main class="max-w-3xl mx-auto px-6 py-20">
    <h1 class="text-3xl font-bold mb-4">Guide moved</h1>
    <p class="text-text-light-secondary mb-6">This guide now lives under /guides.</p>
    <a class="inline-flex items-center gap-2 text-primary font-semibold" href={`/guides/${slug}`}>
      Go to the guide
      <Icon name="arrow_forward" className="text-sm" />
    </a>
  </main>
</BaseLayout>
