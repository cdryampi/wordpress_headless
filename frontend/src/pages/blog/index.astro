---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Icon from "../../components/Icon";
---

<BaseLayout title="Guides moved" description="Guides now live under /guides." bodyClass="bg-background-light text-text-light font-display">
  <main class="max-w-3xl mx-auto px-6 py-20">
    <h1 class="text-3xl font-bold mb-4">Guides moved</h1>
    <p class="text-text-light-secondary mb-6">The guides are now available under /guides.</p>
    <a class="inline-flex items-center gap-2 text-primary font-semibold" href="/guides">
      Go to Guides
      <Icon name="arrow_forward" className="text-sm" />
    </a>
  </main>
</BaseLayout>
